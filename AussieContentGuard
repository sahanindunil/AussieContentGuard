    <!-- JavaScript Logic -->
    <script>
        // --- 1. Utility: Label Wrapping Logic (16 chars) ---
        function processLabels(labels) {
            return labels.map(label => {
                if (typeof label === 'string' && label.length > 16) {
                    const words = label.split(' ');
                    const lines = [];
                    let currentLine = words[0];
                    for (let i = 1; i < words.length; i++) {
                        if ((currentLine + " " + words[i]).length <= 16) {
                            currentLine += " " + words[i];
                        } else {
                            lines.push(currentLine);
                            currentLine = words[i];
                        }
                    }
                    lines.push(currentLine);
                    return lines;
                }
                return label;
            });
        }

        // --- 2. Utility: Common Tooltip Configuration ---
        const commonTooltipConfig = {
            callbacks: {
                title: function(tooltipItems) {
                    const item = tooltipItems[0];
                    let label = item.chart.data.labels[item.dataIndex];
                    if (Array.isArray(label)) {
                        return label.join(' ');
                    } else {
                        return label;
                    }
                }
            }
        };
        
        // --- 3. Mouse Follower Logic ---
        document.addEventListener('mousemove', (e) => {
            const rocket = document.getElementById('rocket-follower');
            // Update position
            rocket.style.left = `${e.clientX}px`;
            rocket.style.top = `${e.clientY}px`;
            // Ensure visibility after first move
            if (rocket.classList.contains('hidden')) {
                rocket.classList.remove('hidden');
            }
        });
        
        // Hide the rocket when the mouse leaves the viewport
        document.addEventListener('mouseleave', () => {
            const rocket = document.getElementById('rocket-follower');
            if (!rocket.classList.contains('hidden')) {
                rocket.classList.add('hidden');
            }
        });

        // --- 4. Chart Implementations ---

        // Chart 1: Efficiency (Bar Chart)
        const ctxEfficiency = document.getElementById('efficiencyChart').getContext('2d');
        const labelsEfficiency = processLabels(['Manual Copywriting', 'AussieContentGuard']);
        new Chart(ctxEfficiency, {
            type: 'bar',
            data: {
                labels: labelsEfficiency,
                datasets: [{
                    label: 'Hours to List 500 SKUs',
                    data: [120, 5], // 120 hours vs 5 hours estimate
                    backgroundColor: ['#9CA3AF', '#2563EB'], // Gray vs Brand Blue
                    borderRadius: 8
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                indexAxis: 'y', // Horizontal bar
                plugins: {
                    legend: { display: false },
                    tooltip: commonTooltipConfig
                },
                scales: {
                    x: { beginAtZero: true, grid: { display: false } },
                    y: { grid: { display: false } }
                }
            }
        });

        // Chart 2: Compliance Composition (Doughnut)
        const ctxCompliance = document.getElementById('complianceChart').getContext('2d');
        // Labels updated for clarity
        const labelsCompliance = processLabels(['ACL (Australian Consumer Law)', 'Safety Warnings', 'Category Specific', 'Brand Voice']);
        new Chart(ctxCompliance, {
            type: 'doughnut',
            data: {
                labels: labelsCompliance,
                datasets: [{
                    data: [35, 30, 20, 15],
                    backgroundColor: ['#2563EB', '#F59E0B', '#10B981', '#6366F1'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'right' },
                    tooltip: commonTooltipConfig
                }
            }
        });

        // Chart 3: Localisation (Bar/Pie hybrid - using Bar for clarity on hierarchy)
        const ctxLocalisation = document.getElementById('localisationChart').getContext('2d');
        const labelsLocalisation = processLabels(['National (Generic)', 'State Level', 'City/Metro', 'Suburb Clusters']);
        new Chart(ctxLocalisation, {
            type: 'bar',
            data: {
                labels: labelsLocalisation,
                datasets: [{
                    label: 'Relevance Score',
                    data: [30, 55, 80, 95],
